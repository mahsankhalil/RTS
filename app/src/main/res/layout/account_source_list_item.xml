<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/account_source_list_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/account_source_list_item_image"
            android:layout_width="40dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_height="40dp"
            />
        <TextView
            app:layout_constraintLeft_toRightOf="@id/account_source_list_item_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/account_source_list_item_title"
            android:layout_width="wrap_content"
            android:text="Cash"
            android:textSize="28sp"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account_source_list_item_currency"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/account_source_list_item_menu_icon"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="1500"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="28sp"
                />

        <ImageView

            android:id="@+id/account_source_list_item_menu_icon"
            android:src="@drawable/ic_three_dot_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>